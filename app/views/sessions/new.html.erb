<%# provide(:title, "Log in") %>

<h1>Log in</h1>
<%= form_with model: @user, url: login_path do |f| %>
  <%= render "shared/flash_lower" %>

  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <fieldset class="form-group">
    <%= f.label :remember_me, class: "form-group paper-check" do %>
      <%= f.check_box :remember_me %>
      <span>Remember me</span>
    <% end %>
  </fieldset>

  <%= f.submit "Log in" %>
<% end %>
