<div class="paper container margin-top story-card <%= "selected" if paragraph.id ==selected_paragraph_id %>" id="p<%= paragraph.id %>" tabindex="-1" data-story-target="card" data-action="click@document->story#unhighlightSelectedParagraph">
  <div class="card-body">
    <div class="row margin-bottom-none">
      <span class="card-text story-content">
        <span class="story-level"><%= paragraph.level %>.</span><%= paragraph %><span class="card-text story-date">–<%= paragraph.last_updated_date %></span>
        <%= link_to "Continue from here…", create_paragraph_path(paragraph), class: "story-continue" %>
      </span>
        <%= render 'stories/paragraph_stats', paragraph: paragraph, reaction: reaction %>
    </div>
  </div>
</div>
